{
  "name": "playwright-ai-healer",
  "version": "1.0.0",
  "description": "AI-powered self-healing test automation framework that uses GPT-4 and Model Context Protocol to automatically recover from broken selectors, analyze DOM changes, and maintain test resilience with intelligent healing strategies",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "mcp:start": "node dist/mcp-server/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "report": "playwright show-report",
    "clean": "rm -rf dist node_modules playwright-report test-results"
  },
  "keywords": [
    "playwright",
    "test-automation",
    "self-healing",
    "mcp-server",
    "llm",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.3.1",
    "openai": "^4.20.0",
    "sql.js": "^1.13.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
